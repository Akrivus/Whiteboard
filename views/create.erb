<%writings.each do |writing|%>
	<%if Time.now.to_i - writing[:creation] < 7200%>
		<span style="overflow:hidden;max-height:25%!important;max-width:25%!important;position:absolute;top:<%=writing[:y]%>%;left:<%=writing[:x]%>%;opacity:<%=1.0-((Time.now.to_f - writing[:creation].to_f) / 7200.0)%>;"><%=writing[:message]%></span>
	<%end%>
<%end%>
<form id="form" action="<%=URL%>/create" method="POST" style="width:100px;position:absolute;top:<%=params["y"]%>%;left:<%=params["x"]%>%;">
	<input type="text" name="message" placeholder="Message" /><br />
	<input type="hidden" name="y" value="<%=params["y"]%>" />
	<input type="hidden" name="x" value="<%=params["x"]%>" />
	<input type="submit" value="Submit!" />
</form>